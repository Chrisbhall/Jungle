<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! <%= @order.email %></h4>
  </div>
  <table class="table table-bordered">
  <thead>
    <tr>
      <th>Product</th>
      <th>Image</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
  <% count = 0 %>
  <% @order.line_items.each do |item| %>
    <% @product = Product.find params[:id] = @order.line_items[count].product_id %>
    <%= render 'item', product: @product, quantity: item[:quantity].to_i %>
    <% count += 1 %>
<% end %>
</tbody>
<tfoot>
<tr>
  <th colspan="3">
    TOTAL:
  </th>
  <th>
    <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
  </th>
</tr>
</tfoot>
</table>
</section>
